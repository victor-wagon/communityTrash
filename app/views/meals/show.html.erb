<div class="container">
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <div class="card">
        <div class="card-body">
          <div class="text-center">
            <h3><%= @meal.title %></h3>
            <p><%= @meal.description %></p>
          </div>
          <div class="d-flex justify-content-between">
            <p>Capacity: <%=@meal.rating %></p>
            <p>Rating: <%= @meal.capacity %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <hr>
      <div class="d-flex justify-content-end">
        <%= link_to "New Review", new_meal_review_path(@meal), class: "badge badge-secondary" %>
      </div>
      <div>
        <h3 class="text-center">Reviews</h3>
      </div>
    </div>
  </div>
</div>
<div class="row m-1">
  <% @meal.reviews.each do |review| %>
    <div class="col-sm-4">
      <div class="card position-relative">
        <div class="card-body pb-0">
          <h5 class="text-center"><%= review.title %></h5>
          <hr class="">
          <div class="d-flex justify-content-center mb-3">
            <% review.rating.times do %>
              <i class="fas fa-star mx-1 text-warning"></i>
            <% end %>
            <% (5 - review.rating).times do %>
              <i class="far fa-star mx-1"></i>
            <% end %>
          </div>
        </div>
        <%= link_to review_path(review), method: :delete, class: "close_cross" do %>
          <i class="fas fa-times-circle"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="row mt-5">
  <div class="col-6 offset-3">
    <%= link_to "back", meals_path, class: "btn btn-primary btn-block" %>
  </div>
</div>
</div>